<project>

	<property name="lib" value="lib"/>

    <target name="clean">
		<delete dir="build"/>
        <delete dir="bin-release"/>
    </target>

	<path id="required_jars">
		<pathelement location="${lib}/c3p0-0.9.5.1.jar"/>
		<pathelement location="${lib}/commons-dbutils-1.6.jar"/>
		<pathelement location="${lib}/hamcrest-core-1.3.jar"/>
		<pathelement location="${lib}/hazelcast-3.5.2.jar"/>
		<pathelement location="${lib}/jackson-annotations-2.6.0.jar"/>
		<pathelement location="${lib}/jackson-core-2.6.0.jar"/>
		<pathelement location="${lib}/jackson-databind-2.6.0.jar"/>
		<pathelement location="${lib}/jbcrypt-0.4.jar"/>
		<pathelement location="${lib}/junit-4.12.jar"/>
		<pathelement location="${lib}/log4j-api-2.3.jar"/>
		<pathelement location="${lib}/log4j-core-2.3.jar"/>
		<pathelement location="${lib}/lucene-analyzers-common-5.3.0.jar"/>
		<pathelement location="${lib}/lucene-core-5.3.0.jar"/>
		<pathelement location="${lib}/lucene-queryparser-5.3.0.jar"/>
		<pathelement location="${lib}/mchange-commons-java-0.2.10.jar"/>
		<pathelement location="${lib}/mysql-connector-java-5.1.36-bin.jar"/>
		<pathelement location="${lib}/netty-all-4.0.31.Final.jar"/>
		<pathelement location="${lib}/okhttp-2.4.0.jar"/>
		<pathelement location="${lib}/okio-1.5.0.jar"/>
	</path>

	<target name="compile" >
        <mkdir dir="bin-release"/>

		<javac destdir="bin-release" includeantruntime="false" debug="true">
			
			<src path="src/java"/>

			<classpath>
				<path refid="required_jars"/>
			</classpath>
		</javac>
		
    </target>
	
	<pathconvert property="manifest.classpath" pathsep=" ">
		<path refid="required_jars"/>
		<mapper>
			<chainedmapper>
				<flattenmapper/>
				<globmapper from="*.jar" to="lib/*.jar"/>
			</chainedmapper>
		</mapper>
	</pathconvert>
	
	<target name="jar" depends="compile">
		
		<delete dir="build"/>
		<mkdir dir="build"/>
		<mkdir dir="build/lib"/>
		
		<jar destfile="build/serverville.jar">
			<fileset dir="bin-release"/>
            <manifest>
                <attribute name="Main-Class" value="com.dreamwing.serverville.ServervilleMain"/>
				<attribute name="Class-Path" value="${manifest.classpath}"/>
            </manifest>
        </jar>
		
		<copy todir="build/lib" flatten="true">
			<path refid="required_jars"/>
		</copy>
		
	</target>
	
</project>